---
import Tag from './Tag.astro';
import Title from './Title.astro';

const tags = [
  {
    label: 'Scrum',
  },
  {
    label: 'Agile',
  },
  {
    label: 'Jira',
  },
  {
    label: 'Project Planning',
  },
  {
    label: 'Notion',
  },
  {
    label: 'HTML',
  },
  {
    label: 'CSS',
  },
  {
    label: 'Typescript',
  },
  {
    label: 'Serverless',
  },
  {
    label: 'AWS',
  },
  {
    label: 'Github Actions',
  },
  {
    label: 'Terragrunt',
  },
];
---

<div class="tag-list">
  <div class="tag-list-container">
    <Title title="Skills" />
    <div class="tag-list-tags">
      {tags.map((tag) => <Tag label={tag.label} />)}
    </div>
  </div>
</div>

<style>
  .tag-list {
    padding: 4rem 0;
    background-color: var(--bg-color);
  }

  .tag-list-container {
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
  }

  .tag-list-tags {
    display: flex;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .tag-list {
      padding: 2rem 1rem;
    }
  }
</style>
