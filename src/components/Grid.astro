---
import Title from './Title.astro';

interface EducationItem {
  degree: string;
  institution: string;
  year: string;
}

interface CertificationItem {
  name: string;
  year: string;
  link?: string;
}

interface Props {
  education?: EducationItem[];
  certifications?: CertificationItem[];
}

const { education = [], certifications = [] } = Astro.props;

const defaultEducation: EducationItem[] = [
  {
    degree: 'Bachelor Degree in Computer Science',
    institution: 'Thammasat University',
    year: '2015',
  },
];

const defaultCertifications: CertificationItem[] = [
  {
    name: 'Cloud Native Associate [Jumpbox Academy]',
    year: '2023',
    link: 'https://www.credly.com/badges/3e4d0392-c5f8-4a9f-9548-59e6f789a9b0',
  },
  {
    name: 'Professional Scrum Master I',
    year: '2022',
    link: 'https://www.credly.com/badges/583e1dcc-3534-4b4c-9ac5-87f668088cad',
  },
];

const educationData = education.length > 0 ? education : defaultEducation;
const certificationsData =
  certifications.length > 0 ? certifications : defaultCertifications;
---

<div class="grid-container">
  <div class="grid-container-wrapper">
    <div class="grid-top-line"></div>
    <div class="grid">
      <div class="grid-item">
        <div class="grid-title-wrapper">
          <Title title="EDUCATION" size="small" order={3} />
        </div>
        <div class="grid-content">
          {
            educationData.map((item) => (
              <div class="grid-entry">
                <div class="grid-entry-title">{item.degree}</div>
                <div class="grid-entry-detail">{item.institution}</div>
                <div class="grid-entry-detail">{item.year}</div>
              </div>
            ))
          }
        </div>
      </div>
      <div class="grid-divider"></div>
      <div class="grid-item">
        <div class="grid-title-wrapper">
          <Title title="CERTIFICATION" size="small" order={4} />
        </div>
        <div class="grid-content">
          {
            certificationsData.map((item) => (
              <div class="grid-entry">
                <a href={item.link} target="_blank">
                  <div class="grid-entry-title link">{item.name}</div>
                </a>
                <div class="grid-entry-detail">{item.year}</div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .grid-container {
    padding: 4rem 0;
    background-color: #fffffe;
  }

  .grid-container-wrapper {
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
  }

  .grid-top-line {
    width: 100%;
    height: 1px;
    background-color: #000000;
    margin-bottom: 1rem;

    @media (max-width: 768px) {
      display: none;
    }
  }

  .grid {
    display: flex;
    width: 100%;
    gap: 0;
  }

  .grid-item {
    flex: 1;
    padding: 0 1.5rem;

    @media (max-width: 768px) {
      margin: 1rem 0;
    }
  }

  .grid-divider {
    width: 1px;
    background-color: #000000;
    margin: 0;

    @media (max-width: 768px) {
      display: none;
    }
  }

  .grid-title-wrapper {
    margin-bottom: 1rem;
  }

  .grid-content {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .grid-entry {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .grid-entry-title {
    font-weight: 700;
    color: #000000;
    font-size: 1rem;
    text-decoration: none;
  }

  .grid-entry-title.link {
    cursor: pointer;
    &:hover {
      text-decoration: underline;
      color: var(--color-primary);
      text-decoration-color: var(--color-primary);
    }
  }

  .grid-entry-detail {
    font-weight: 400;
    color: #000000;
    font-size: 1rem;
  }

  @media (max-width: 768px) {
    .grid-container {
      padding: 2rem 1rem;
    }

    .grid {
      flex-direction: column;
    }

    .grid-divider {
      width: 100%;
      height: 1px;
      margin: 1rem 0;
    }

    .grid-item {
      padding: 0;
    }
  }
</style>
