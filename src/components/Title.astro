---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="title-container">
  <h2 class="item-list-title">{title}</h2>
  <div class="item-list-underline">
    <div class="underline-highlight"></div>
    <div class="underline-gray"></div>
  </div>
</div>

<style>
  .title-container {
    display: flex;
    flex-direction: column;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
  }

  .item-list-title {
    font-size: 2.25rem;
    font-weight: 700;
    color: #374151;
    margin: 0 0 1rem 0;
  }

  .item-list-underline {
    display: flex;
    margin-bottom: 3rem;
  }

  .underline-highlight {
    width: 60px;
    height: 3px;
    background-color: var(--color-primary);
  }

  .underline-gray {
    flex: 1;
    height: 3px;
    background-color: #e5e7eb;
  }
</style>
